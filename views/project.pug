extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{project.project_name}

        p #{project.description}

      .project-tech-links-box.box
        h6 Technologies
        ul

          each tech in project.technologies
            li= tech 
        
        sub (% based on GitHub's #[a(href="https://github.com/github/linguist/blob/master/docs/how-linguist-works.md" target="_blank") Linguist library])

        a.btn-link(href=`${project.live_link}` target="_blank") Live Demo
        a.btn-link(href=`${project.github_link}` target="_blank") GitHub Repo

    .project-img-box.box
      each url in project.image_urls 
        img.project-img(src=`${url}`, alt=`Screenshot of ${project.project_name} project`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
